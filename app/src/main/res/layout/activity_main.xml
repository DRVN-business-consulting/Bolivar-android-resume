<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:background="@android:color/holo_purple" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_profile" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Alisah Mae S. Bolivar"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"


                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_home_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Matapat St. Diliman Quzon City"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_email_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="hernie@gmail.com"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_numbers_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="09738291781"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_link_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="www.facebook.com"
                    android:textSize="15dp" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Educational Background"
                    android:textSize="18dp"
                    android:checked="true"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/College"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="College"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/School"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Iloilo Science and Technology University"
                    android:paddingLeft="20dp"

                    android:textSize="15dp" />


                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Work Experience"
                    android:textSize="18dp"
                    android:checked="true"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/PSA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:text="PSA"
                    android:textStyle="bold"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/ISA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:text="Information Systems Analyst"
                    android:textSize="15dp" />


                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Skills"
                    android:textSize="18dp"
                    android:checked="true"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/skills1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:text="Java"
                    android:textStyle="bold"
                    android:textSize="15dp" />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="423dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="9dp"
                    android:progress="50"
                    android:progressTint="#772CA2"

                    />

                <TextView
                    android:id="@+id/skills2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:text="JavaScript"
                    android:textStyle="bold"

                    android:textSize="15dp" />

                <SeekBar
                    android:id="@+id/seekBar2"
                    android:layout_width="423dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="9dp"
                    android:progress="40"
                    android:progressTint="#772CA2"
                    />


                <TextView
                    android:id="@+id/skills3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:text="HTML"
                    android:textStyle="bold"
                    android:textSize="15dp" />

                <SeekBar
                    android:id="@+id/seekBar3"
                    android:layout_width="423dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="9dp"
                    android:progress="80"
                    android:progressTint="#772CA2"
                    />

                <TextView
                    android:id="@+id/skills4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:text="CSS"
                    android:textStyle="bold"
                    android:textSize="15dp" />

                <SeekBar
                    android:id="@+id/seekBar4"
                    android:layout_width="423dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="9dp"
                    android:progress="60"
                    android:progressTint="#772CA2"
                    />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:background="@android:color/holo_purple" />


</LinearLayout>